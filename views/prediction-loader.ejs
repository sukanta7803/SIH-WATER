<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Predicting Outbreak</title>
  <link rel="stylesheet" href="/css/loader.css" />
</head>
<body>
  <div class="loader-wrap">
    <div class="robot">
      <div class="robot-head">
        <div class="eyes">
          <span class="eye left"></span>
          <span class="eye right"></span>
        </div>
        <div class="antenna"></div>
      </div>
      <div class="robot-body">
        <div class="chest"></div>
      </div>
      <div class="wheel"></div>
    </div>

    <h1 class="loader-title">Predicting Outbreakâ€¦</h1>
    <p class="loader-sub">Running AI models and preparing the map</p>
    <div class="progress">
      <div class="bar"></div>
    </div>
  </div>

  <script>
    // After a small delay, fetch the actual page and replace location
    // This ensures we show the loader while backend runs the python step
    (async function go() {
      try {
        const url = new URL(window.location.href);
        url.searchParams.set('ready', '1');
        const res = await fetch(url.toString(), { headers: { 'Accept': 'text/html' } });
        const html = await res.text();
        // Replace whole document with the loaded HTML
        document.open();
        document.write(html);
        document.close();
      } catch (e) {
        console.error('Failed to load prediction page', e);
      }
    })();
  </script>
</body>
</html>
